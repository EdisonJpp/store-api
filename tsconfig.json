{
  "compilerOptions": {
    "lib": ["es5", "es6", "es2019"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@helpers/*": ["src/helpers/*"],
      "@config/*": ["src/config/*"],
      "@entity/*": ["src/entity/*"]
    }
  }
}
